{
  "name": "caia",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "slack",
    "claude",
    "codex",
    "opencode"
  ],
  "scripts": {
    "build": "tsc -b",
    "clean": "rm -rf slack/dist claude/dist codex/dist opencode/dist",
    "test": "vitest run",
    "test:claude": "vitest run tests/sdk-live/claude --config vitest.config.sdk-live.ts --reporter=verbose",
    "test:codex": "vitest run tests/sdk-live/codex --config vitest.config.sdk-live.ts --reporter=verbose",
    "test:opencode": "vitest run --config vitest.config.sdk-opencode.ts --reporter=verbose",
    "test:unit:opencode": "vitest run --config vitest.config.opencode.ts --reporter=verbose tests/unit/opencode",
    "test:integration:opencode": "vitest run --config vitest.config.opencode.ts --reporter=verbose tests/integration/opencode",
    "test:opencode:all": "vitest run --config vitest.config.opencode.ts --reporter=verbose",
    "test:opencode:failure": "vitest run --config vitest.config.opencode.ts --reporter=verbose tests/unit/opencode/*recovery*.test.ts tests/unit/opencode/*collision*.test.ts tests/unit/opencode/*startup*.test.ts tests/integration/opencode/*recovery*.test.ts tests/integration/opencode/*restart*.test.ts tests/integration/opencode/*reconnect*.test.ts",
    "test:opencode:coverage": "vitest run --config vitest.config.opencode.ts --coverage"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "latest",
    "@opencode-ai/sdk": "latest",
    "@slack/bolt": "^4.1.0",
    "@slack/web-api": "^7.8.0",
    "async-mutex": "^0.5.0",
    "dotenv": "^16.4.0",
    "highlight.js": "^11.11.1",
    "markdown-it": "^14.1.0",
    "markdown-it-ins": "^4.0.0",
    "markdown-it-mark": "^4.0.0",
    "puppeteer": "^24.35.0",
    "remove-markdown": "^0.6.3",
    "sharp": "^0.34.5",
    "table": "^6.9.0",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^4.0.17",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.17"
  }
}
